master=himrod-big-2
port=7073
master_url=$master:$port
num_nodes=16
mat_fin=$PWD/mat_test_data.txt
vec_fin=$PWD/vec_test_data.txt

./run -p $((num_nodes*16)) -r 15 -l 3 -a 2 -m $mat_fin -v $vec_fin -U $master_url
